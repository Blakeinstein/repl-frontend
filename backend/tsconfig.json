{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "./dist",
  },
  "include": [
    "*.ts",
    "*.d.ts",
    "workers/*.ts",
    "workerScripts/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "typings.d.ts"
  ],
}